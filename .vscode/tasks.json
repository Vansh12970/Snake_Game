{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SFML Snake Game",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\main.cpp",
                "-o",
                "${workspaceFolder}\\SnakeGame.exe",
                "-IC:\\SFML-3.0.0\\include",
                "-LC:\\SFML-3.0.0\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-audio",
                "-lsfml-network",
                "-lsfml-system",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Snake Game with SFML using MinGW"
        }
    ]
}